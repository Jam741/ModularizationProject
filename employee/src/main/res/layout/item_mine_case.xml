<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="@dimen/vertical_padding_margin"
        android:background="@color/bg_whide"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_goods"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            tools:src="@mipmap/ic_launcher" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_goodsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试文版"
                android:textColor="@color/color_1"
                android:textSize="16dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_collect_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/tv_view_count"
                    android:drawableLeft="@mipmap/work_list_collect_ico"
                    android:drawablePadding="3dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_4"
                    android:textSize="@dimen/font7_sp"
                    tools:text="12" />

                <TextView
                    android:id="@+id/tv_view_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="6dp"
                    android:drawableLeft="@mipmap/work_list_view_ico"
                    android:drawablePadding="3dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_4"
                    android:textSize="@dimen/font7_sp"
                    tools:text="ss" />


            </LinearLayout>

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/btn_checkComment"
            android:layout_width="89dp"
            android:layout_height="37dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_bg_stroke_c1">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:gravity="center"
                android:text="最新评论"
                android:textColor="@color/color_1"
                android:textSize="@dimen/font4_sp" />


            <com.flyco.tablayout.widget.MsgView xmlns:mv="http://schemas.android.com/apk/res-auto"
                android:id="@+id/tv_messageNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="11.5sp"
                android:visibility="gone"
                mv:mv_backgroundColor="#FD481F"
                mv:mv_isRadiusHalfHeight="true"
                mv:mv_strokeColor="#ffffff"
                mv:mv_strokeWidth="1dp" />

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>