<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/realscene_extra_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    android:visibility="gone">


    <com.rx.android.jamspeedlibrary.utils.view.MyListView
        android:id="@+id/lv_serviceStandard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:divider="@android:color/transparent"
        android:visibility="visible"></com.rx.android.jamspeedlibrary.utils.view.MyListView>


    <LinearLayout
        android:id="@+id/softPrice_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="@color/bg_whide"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:visibility="gone">


        <TextView
            android:id="@+id/tv_casePriceType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="设计费"
            android:textColor="@color/color_1"
            android:textSize="@dimen/font3_sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_extra_softPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_6"
            android:textSize="@dimen/font3_sp"
            tools:text="￥ 100-200" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/m²"
            android:textColor="@color/color_1"
            android:textSize="@dimen/font3_sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bg_whide"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/work_view_ic"
            android:text="作品已浏览"
            android:textColor="@color/color_4"
            android:textSize="@dimen/font3_sp" />


        <TextView
            android:id="@+id/tv_extra_viewCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_4"
            android:textSize="@dimen/font3_sp"
            tools:text="200次" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/color_3" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bg_whide"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/work_save_ic"
            android:text="作品已收藏"
            android:textColor="@color/color_4"
            android:textSize="@dimen/font3_sp" />


        <TextView
            android:id="@+id/tv_extra_collectCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_4"
            android:textSize="@dimen/font3_sp"
            tools:text="200次" />
    </LinearLayout>

</LinearLayout>