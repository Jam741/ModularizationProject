<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        android:background="@color/bg_whide">


        <TextView
            android:id="@+id/topTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:maxWidth="180dp"
            android:singleLine="true"
            android:textAppearance="@style/TextTitle"
            tools:text="ExpandableTextViewExpandableTextViewExpandableTextViewExpandableTextView" />


        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:text="取消"
            android:textColor="@color/color_5"
            android:textSize="@dimen/font2_sp" />


        <TextView
            android:id="@+id/btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="确认"
            android:textColor="@color/color_6"
            android:textSize="@dimen/font2_sp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        android:background="@color/bg_whide"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/ed_key_words"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_marginRight="@dimen/horizontal_margin"
            android:layout_marginTop="8dp"
            android:background="@drawable/btn_bg_stroke_gray"
            android:drawableLeft="@mipmap/search_box_ico"
            android:drawablePadding="8dp"
            android:hint="请输入作品标题关键字"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLines="1"
            android:paddingLeft="8dp"
            android:textColor="@color/text_color_black"
            android:textColorHint="@color/text_color_weak"
            android:textSize="@dimen/text_normal"
            android:textStyle="normal"
            tools:ignore="HardcodedText,RtlSymmetry" />


        <ImageView
            android:id="@+id/btn_clear_edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignRight="@id/ed_key_words"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/vertical_margin"
            android:paddingRight="5dp"
            android:src="@mipmap/delete_ico"
            android:visibility="gone"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

</LinearLayout>