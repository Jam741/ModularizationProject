<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="3dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="分批支付"
            android:textColor="@color/color_1"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="7dp"
            android:text="分批支付金额必须大于300元"
            android:textColor="@color/color_6"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/ed_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/horizontal_margin"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:background="@drawable/btn_bg_stroke_normal"
            android:hint="输入支付金额，精确到元"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:padding="5dp"
            android:textColorHint="@color/color_5"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/divider_normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/bg_whide"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/color_6"
                android:textSize="18sp" />

            <View
                android:layout_width="@dimen/divider_height"
                android:layout_height="match_parent"
                android:background="@color/divider_normal" />

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/bg_whide"
                android:gravity="center"
                android:text="确认"
                android:textColor="@color/color_6"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>