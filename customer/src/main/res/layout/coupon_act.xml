<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/toolbr_layout" />


    <TextView
        android:id="@+id/btn_explain"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@color/bg_whide"
        android:elevation="3dp"
        android:gravity="center"
        android:text="优惠券使用说明"
        android:textColor="@color/color_1"
        android:textSize="@dimen/font3_sp"
        android:translationZ="2dp" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.yingwumeijia.commonlibrary.widget.recycler.XRecyclerView
            android:id="@+id/rv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:id="@+id/empty_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="85dp"
                    android:drawablePadding="28dp"
                    android:drawableTop="@mipmap/mine_ticket_no_data_ico"
                    android:gravity="center_horizontal"
                    android:text="抱歉"
                    android:textColor="@color/color_5"
                    android:textSize="@dimen/font4_sp"
                    android:visibility="visible" />


                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="当前暂无优惠券"
                    android:textColor="@color/color_6"
                    android:textSize="@dimen/font1_sp" />

                <TextView
                    android:id="@+id/btn_checkPast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/mine_more_ico"
                    android:padding="10dp"
                    android:text="查看已失效的券"
                    android:textColor="@color/color_5"
                    android:textSize="@dimen/font6_sp" />
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>


</LinearLayout>