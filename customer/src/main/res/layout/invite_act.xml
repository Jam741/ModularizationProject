<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_whide"
    android:orientation="vertical">

    <include layout="@layout/toolbr_layout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:text="扫描二维码"
        android:textColor="@color/color_1"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="让您的朋友也可以下载鹦鹉美家APP"
        android:textColor="@color/color_4"
        android:textSize="@dimen/font6_sp" />

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="204dp"
        android:layout_height="204dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="13dp"
            android:layout_height="@dimen/divider_height"
            android:background="@color/color_2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text=" 或将下载链接分享给好友 "
            android:textColor="@color/color_4"
            android:textSize="@dimen/font6_sp" />


        <View
            android:layout_width="13dp"
            android:layout_height="@dimen/divider_height"
            android:background="@color/color_2" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/wchart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/wechat_logo"
            android:gravity="center_horizontal"
            android:text="微信好友"
            android:textColor="@color/color_1"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/friends_logo"
            android:gravity="center_horizontal"
            android:text="朋友圈"
            android:textColor="@color/color_1"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/message_logo"
            android:gravity="center_horizontal"
            android:text="短信"
            android:textColor="@color/color_1"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/weibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/weibo_logo"
            android:gravity="center_horizontal"
            android:text="微博"
            android:textColor="@color/color_1"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/qq_logo"
            android:gravity="center_horizontal"
            android:text="QQ"
            android:textColor="@color/color_1"
            android:textSize="10sp" />
    </LinearLayout>


</LinearLayout>