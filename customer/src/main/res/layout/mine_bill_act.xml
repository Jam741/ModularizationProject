<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbr_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_whide"
        android:orientation="vertical">


        <TextView
            android:id="@+id/btn_bill_payment"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:layout_marginTop="10dp"
            android:background="@color/bg_whide"
            android:drawableLeft="@mipmap/mine_bill_wait_pay_ic"
            android:drawablePadding="36dp"
            android:drawableRight="@mipmap/mine_more_ico"
            android:gravity="center_vertical"
            android:paddingLeft="36dp"
            android:paddingRight="20dp"
            android:text="等待支付"
            android:textColor="@color/color_1"
            android:textSize="@dimen/font2_dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:layout_marginLeft="36dp"
            android:background="@color/divider_normal" />


        <TextView
            android:id="@+id/btn_bill_detail"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:layout_marginTop="10dp"
            android:background="@color/bg_whide"
            android:drawableLeft="@mipmap/mine_bill_detail_ic"
            android:drawablePadding="36dp"
            android:drawableRight="@mipmap/mine_more_ico"
            android:gravity="center_vertical"
            android:paddingLeft="36dp"
            android:paddingRight="20dp"
            android:text="账单明细"
            android:textColor="@color/color_1"
            android:textSize="@dimen/font2_dp" />
    </LinearLayout>

</LinearLayout>